{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "standard",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "US": true,
        "W": true,
        "WD": true,
        "WDL": true,
        "JMVC": true,
        "JMVC_DEFAULT": true,
        "$JMVC": true,
        "jmvc": true
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", 4],
        "no-extra-semi": "error",
        "semi": ["error", "always"],
        "one-var": ["error", "always"]
    }
}